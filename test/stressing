==== GLOABALZONE
while true ; do
  echo -------------
  date
  echo -n clone…
  dolly clone --tag=global --snapshot-expiration-datetime=PT2M --sub-zfs-dir-incl="" --zpool-name-incl=rpool
  if test $? -ne 0 ; then break ; fi
  echo ✔
  echo ----
  date
  echo -n kill…
  dolly kill
  if test $? -ne 0 ; then break ; fi
  echo ✔
done


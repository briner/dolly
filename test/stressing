===== LOCALZONE
while true ; do
  echo -------------
  date
  echo ✔
  echo -n clone… one
  dolly clone /dolly/one --tag=one --snapshot-expiration-datetime=PT2M
  if test $? -ne 0 ; then break ; fi
  echo ✔
  echo --
  date
  echo -n kill… one
  dolly kill /dolly/one
  if test $? -ne 0 ; then date ; break ; fi
done
date
touch /var/run/unige_zfs_rpool.lock

while true ; do

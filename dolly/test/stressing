===== LOCALZONE
while true ; do
  echo -------------
  date
  echo -n clone…
  dolly clone --tag=aui --snapshot-expiration-datetime=PT2M
  echo ✔
  sleep 15
  echo ----
  date
  echo -n kill…
  dolly kill
  echo ✔
  sleep 15
done


while true ; do
  echo -------------
  date
  echo -n clone…
  dolly clone --mountpoint=/dolly/number2 --tag=aui --snapshot-expiration-datetime=PT2M
  echo ✔
  sleep 15
  echo ----
  date
  echo -n kill…
  dolly kill --mountpoint=/dolly/number2
  echo ✔
  sleep 15
done


while true ; do
  
  sleep 15 ; date ; echo @stress1_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress1_local"
  sleep 15 ; date ; echo @stress2_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress2_local"
  sleep 15 ; date ; echo @stress3_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress3_local"
  sleep 15 ; date ; echo @stress4_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress4_local"
  sleep 15 ; date ; echo @stress5_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress5_local"
  sleep 15 ; date ; echo @stress6_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress6_local"
  sleep 15 ; date ; echo @stress7_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress7_local"
  sleep 15 ; date ; echo @stress8_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress8_local"
  sleep 15 ; date ; echo @stress9_local
  zfsallsnap snapshot --excludezonepools --clobber --destroyclones "@stress9_local"
done


==== GLOABALZONE
while true ; do
  echo -------------
  date
  echo -n clone…
  dolly clone --tag=global --snapshot-expiration-datetime=PT2M --sub-zfs-dir-incl="" --zpool-name-incl=rpool
  echo ✔
  sleep 15
  echo ----
  date
  echo -n kill…
  dolly kill
  echo ✔
  sleep 15
done

while true ; do 
echo -------------
  date
  echo -n clone…
  dolly clone --tag=global --mountpoint=/dolly/number2 --snapshot-expiration-datetime=PT2M --sub-zfs-dir-incl="" --zpool-name-incl=rpool
  echo ✔
  sleep 15
  echo ----
  date
  echo -n kill…
  dolly kill --mountpoint=/dolly/number2
  echo ✔
  sleep 15
done


